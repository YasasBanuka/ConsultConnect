<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSignupActivity4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/header2Close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <TextView
                    android:id="@+id/headerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Login"
                    android:textColor="@color/linkBlue"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/headerButton"
                    app:layout_constraintStart_toStartOf="@+id/header2Close"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp">

                <!-- Horizontal Line -->
                <View
                    android:id="@+id/horizontalLine"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="#666666"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- First Circle (Start) -->

                <View
                    android:id="@+id/circle21"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_bg"
                    app:layout_constraintBottom_toBottomOf="@id/horizontalLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/horizontalLine" />

                <!-- Second Circle -->
                <TextView
                    android:id="@+id/blueCircle21"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_btn_background"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/circle21"
                    app:layout_constraintEnd_toEndOf="@id/circle21"
                    app:layout_constraintStart_toStartOf="@id/circle21"
                    app:layout_constraintTop_toTopOf="@id/circle21" />

                <TextView
                    android:id="@+id/checked21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/checkbox_on_background"
                    app:layout_constraintBottom_toBottomOf="@id/blueCircle21"
                    app:layout_constraintEnd_toEndOf="@id/blueCircle21"
                    app:layout_constraintStart_toStartOf="@id/blueCircle21"
                    app:layout_constraintTop_toTopOf="@id/blueCircle21" />

                <View
                    android:id="@+id/circle22"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_bg"
                    app:layout_constraintBottom_toBottomOf="@id/horizontalLine"
                    app:layout_constraintEnd_toEndOf="@id/circle23"
                    app:layout_constraintStart_toStartOf="@id/horizontalLine"
                    app:layout_constraintTop_toTopOf="@id/horizontalLine" />

                <!-- Third Circle -->
                <TextView
                    android:id="@+id/blueCircle22"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_btn_background"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/circle22"
                    app:layout_constraintEnd_toEndOf="@id/circle22"
                    app:layout_constraintStart_toStartOf="@id/circle22"
                    app:layout_constraintTop_toTopOf="@id/circle22" />

                <TextView
                    android:id="@+id/checked22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/checkbox_on_background"
                    app:layout_constraintBottom_toBottomOf="@id/blueCircle22"
                    app:layout_constraintEnd_toEndOf="@id/blueCircle22"
                    app:layout_constraintStart_toStartOf="@id/blueCircle22"
                    app:layout_constraintTop_toTopOf="@id/blueCircle22" />

                <View
                    android:id="@+id/circle23"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_bg"
                    app:layout_constraintBottom_toBottomOf="@id/horizontalLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/horizontalLine" />

                <TextView
                    android:id="@+id/blueCircle23"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_btn_background"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/circle23"
                    app:layout_constraintEnd_toEndOf="@id/circle23"
                    app:layout_constraintStart_toStartOf="@id/circle23"
                    app:layout_constraintTop_toTopOf="@id/circle23" />

                <TextView
                    android:id="@+id/checked23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/checkbox_on_background"
                    app:layout_constraintBottom_toBottomOf="@id/blueCircle23"
                    app:layout_constraintEnd_toEndOf="@id/blueCircle23"
                    app:layout_constraintStart_toStartOf="@id/blueCircle23"
                    app:layout_constraintTop_toTopOf="@id/blueCircle23" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="All Done"
                android:textColor="@color/subtextGray"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/blueCircle24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/blue_btn_background"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/circle22"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/circle22" />

                <TextView
                    android:id="@+id/checked24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/checkbox_on_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/blueCircle24"
                    app:layout_constraintStart_toStartOf="@+id/blueCircle24"
                    app:layout_constraintTop_toTopOf="@+id/blueCircle24" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Congratulations !"
                android:textAlignment="center"
                android:textColor="@color/subtextGray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="You have successfully registered as a Free Member!"
                android:textAlignment="center"
                android:textColor="@color/subtextGray"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/homeButton"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/blue_btn_background"
                android:fontFamily="@font/inter_semibold"
                android:text="Go to Home"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>